<div class="container">
<h1>Welcome to Flashcards!</h1>
<% if !current_user %>
  <form action='/login' method='post'>
    <input type='text' placeholder='Enter Username' name='username'><br>
    <input type='password' placeholder='Enter Password' name='password_hash'><br>
    <input type='submit' value='Login'>
  </form>
  <a id='signup' href='/sign_up' >Sign Up!</a>
<% else %>
  <div class='nav-bar'>
    <ul>
      <li><a id='create-deck' href="/create_deck">Create a Deck</a></li>
      <li><a href="/sign_out">[<%= @current_user.username %>] Sign Out</a></li>
    </ul>
  </div>
<% end %>

  <% if @current_user %>
    <div class='all-decks'>
      <p>Choose a deck to play: </p>
      <ul>
        <% @display_deck.each do |deck| %>
        <li><a href='/decks/<%= deck.id %>'><%= deck.name %></a></li>
        <% end %>
      </ul>
    </div>

    <div id='deck-info'>
      <p id='deck-title'></p>
      <p id='deck-description'></p>
      <a id='create-card' href="/create_cards"></a>
    </div>
<% end %>
</div>
